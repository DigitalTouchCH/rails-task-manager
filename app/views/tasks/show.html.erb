<div class = container>
  <h1><%= @task.title %></h1>

  <p class="alert alert-secondary" role="alert">
  <%= @task.details %>
  <% if @task.completed %>
    (done)
  <% else %>
    (work in progress)
  <% end %>
  </p>

  <%= link_to tasks_path, class: "btn btn-primary" do %>
    <i class="fa-solid fa-rotate-left"></i> Back to list
  <% end %>

  <%= link_to "Edit", edit_task_path(@task), class:"btn btn-primary" %>
</div>
