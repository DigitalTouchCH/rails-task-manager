<div class="container">
  <h1>My tasks</h1>

  <ul class="list-group mb-3">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
        <%= check_box_tag "completed_#{task.id}", "1", task.completed, disabled: true %>
        <%= link_to task.title, task_path(task), class: "link-no-decoration"%>
        <%= link_to "",
          task_path(task),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
          class: "fa-solid fa-trash-can"
        %>
        </i>
      </li>
    <% end %>
  </ul>

  <%= link_to "add new task", tasks_new_path, class:"btn btn-primary"%>
</div>
